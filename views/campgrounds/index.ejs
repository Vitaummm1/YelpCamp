    <% layout('layouts/boilerplate')%> 
    <div class="col-md-4 offset-1 mb-3">
        <h1>All Campgrounds</h1>
        <% if(currentUser) {%> 
        <a href="/campgrounds/new" class="btn btn-success">Add Campground</a>
        <% } %> 
    </div>
    <ul>
        <%for(let campground of campgrounds) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-lg-3">
                        <img src="<%= campground.images[0].url %>" alt="" class="img-fluid">
                    </div>
                    <div class="col-lg-9">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            <p class="card-text"><%= campground.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= campground.location %> </small>
                            </p>
                            <a href="campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %></a>
                        </div>
                    </div>
                </div>
            </div>
        <%}%>
    </ul>