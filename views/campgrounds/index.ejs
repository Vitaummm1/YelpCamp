    <% layout('layouts/boilerplate')%> 
    <div class="col-xl-4 mb-3">
        <h1>All Campgrounds</h1>
    </div>
    <ul>
        <%for(let campground of campgrounds) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-xl-3">
                        <img src="<%= campground.images[0].url %>" alt="" class="img-fluid p-1" style="height: 200px; width: 600px; object-fit: cover;">
                    </div>
                    <div class="col-xl-9">
                        <div class="card-body">
                            <h5 class="card-title text-black h2">
                                <%= campground.title %>
                            </h5>
                            <p class="card-text text-black"><%= campground.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= campground.location %> </small>
                            </p>
                            <a href="campgrounds/<%= campground._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            </div>
        <%}%>
    </ul>