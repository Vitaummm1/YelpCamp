<% layout('layouts/boilerplate')%> 
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post" class="validated-form" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="campground[title]" id="title" class="form-control" required>
                <div class="invalid-feedback">Please, fill this field</div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="campground[location]" id="location" class="form-control" required>
                <div class="invalid-feedback">Please, fill this field</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input type="text" name="campground[image]" id="image" class="form-control" required>
                <div class="invalid-feedback">Please, fill this field</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" name="campground[description]" id="description" class="form-control" required></textarea>
                <div class="invalid-feedback">Please, fill this field</div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">@</span>
                    <input type="number" name="campground[price]" id="price" class="form-control" placeholder="0.00" aria-describedby="price-label" step="0.01" min="0" required>
                    <div class="invalid-feedback">Please, fill this field</div>
                </div>
            </div>
            <div class="mb-3">
            <button class="btn btn-success">Add</button>
        </div>
    </div>

</div>