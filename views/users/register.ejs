<% layout('layouts/boilerplate')%> 
<div class="row">
    <h1>Register</h1>
    <div class="col-6 offset-3">
        <form action="/register" class="validated-form" novalidate method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" value="<%= foundCamp.title %>" required>
                <div class="invalid-feedback">Please, fill this field</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="user[password]" id="password" class="form-control" value="<%= foundCamp.location %>" required>
                <div class="invalid-feedback">Please, fill this field</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="user[email]" id="email" class="form-control" value="<%= foundCamp.image %>" required>
                <div class="invalid-feedback">Please, fill this field</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success col-md-4">Edit</button>
            </div>
        </form>
    </div>
</div>

